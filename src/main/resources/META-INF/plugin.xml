<idea-plugin>
    <id>com.sechkarev.TestKotlinPlugin</id>
    <name>Just Add Hilt</name>
    <vendor email="sechkarevs@gmail.com" url="https://github.com/ultra-v1olence">Vladimir Sechkarev</vendor>

    <description><![CDATA[
    This plugin lets you add Hilt library to your Android project.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Just Add Hilt Notification Group" displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="com.sechkarev.justaddhilt.action.AddHiltAction"
                class="com.sechkarev.justaddhilt.action.AddHiltAction"
                text="Add Hilt to the Project"
                description="Add Hilt library to all Android modules of the current project">
            <!-- todo: add icon -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>